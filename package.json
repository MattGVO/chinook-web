{
  "name": "chinook-web",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "start": "npm-run-all -p serve watch",
    "serve": "http-server",
    "watch": "watchify src/index.js -o bundle.js --debug",
    "build": "browserify src/index.js | uglifyjs > bundle.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-stage-2": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "browserify-css": "^0.10.0",
    "eslint": "^3.18.0",
    "eslint-plugin-react": "^6.10.3",
    "http-server": "^0.9.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^0.22.0",
    "uglify-js": "^2.8.16",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "codemirror": "^5.25.0",
    "normalize.css": "^6.0.0",
    "preact": "^7.2.1",
    "sql.js": "^0.4.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [
              "env",
              {
                "targets": {
                  "browsers": [
                    "last 2 versions"
                  ],
                  "uglify": true
                },
                "useBuiltins": true
              }
            ],
            "stage-2"
          ],
          "plugins": [
            [
              "transform-react-jsx",
              {
                "pragma": "h"
              }
            ]
          ]
        }
      ],
      "browserify-css"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/jsx-no-duplicate-props": "error",
      "react/jsx-no-undef": "error",
      "react/jsx-key": "error"
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {
        "pragma": "h"
      }
    }
  }
}
